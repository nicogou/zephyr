config GC9X01X
	bool "GC9X01X display driver"
	default y
	depends on DT_HAS_GALAXYCORE_GC9X01X_ENABLED
	select SPI
	help
	  Enable driver for GC9X01X display driver.

config GC9X01X_BACKLIGHT
	bool "GC9X01X backlight PWM control"
	default n
	depends on GC9X01X
	select PWM
	help
		Enable GC9X01X backlight control
